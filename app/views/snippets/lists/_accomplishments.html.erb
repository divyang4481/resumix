<div class = "panel panel-default">
   <div class = "panel-heading">
      <h4 class = "panel-title">
         <a data-toggle = "collapse" data-parent = "#accordion" href = "#collapseOne">
            Accomplishment Snippets
         </a>
      </h4>
   </div>

   <div id = "collapseOne" class = "panel-collapse collapse">
     <%= link_to 'Add new Accomplishment', new_accomplishment_path, class: "btn btn-xs btn-info" %>
     <div class="panel-body">
       <% @accomplishments.each do |accomplishment| %>
        <div class="well well-sm" draggable="true">
          <h3> <%= accomplishment.name %> </h3>
           <ul>
             <li><%= accomplishment.properties.accomplishment %></li>
             <li><%= accomplishment.properties.description %></li>
           </ul>
           <%= link_to 'Edit', sti_snippet_path(accomplishment.type, accomplishment.id, :edit), class: "btn btn-xs btn-primary" %>
           <%= link_to 'Destroy', sti_snippet_path(accomplishment.type, accomplishment.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-primary" %>
       </div>
       <% end %>
     </div>
   </div>

</div>

<div class = "panel panel-default">

   <div class = "panel-heading">
      <h4 class = "panel-title">
         <a data-toggle = "collapse" data-parent = "#accordion" href = "#collapseSix">
            Language Snippets
         </a>
      </h4>
   </div>

   <div id = "collapseSix" class = "panel-collapse collapse">
      <div class="panel-body">
        <% @languages.each do |language| %>
         <div class="well well-sm" draggable="true">
           <h3> <%= language.name %> </h3>
            <ul>
              <li><%= language.properties.language %></li>
              <li><%= language.properties.level %></li>
            </ul>
            <%= link_to 'Edit', sti_snippet_path(language.type, language.id, :edit), class: "btn btn-xs btn-primary" %>
            <%= link_to 'Destroy', sti_snippet_path(language.type, language.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-primary" %>
        </div>
        <% end %>
      </div>
   </div>

</div>

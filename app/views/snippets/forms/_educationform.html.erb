<%= f.simple_fields_for :properties, OpenStruct.new(f.object.properties.to_hash) do |ff| %>
  <%= ff.input :title, required: false %>
  <%= ff.input :institution, required: false %>
  <%= ff.input :location, required: false %>
  <%= ff.input :start_date, required: false, html5: true %>
  <%= ff.input :end_date, as: :date, start_year: Date.today.year - 30,
                              end_year: Date.today.year, discard_day: true,
                              order: [:month, :year], required: false %>
  <%= ff.input :details, as: :text, required: false, input_html: { rows: 4 } %>
<% end %>
